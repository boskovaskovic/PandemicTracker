<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:layout_margin="2dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/colorForeground"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"


    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/state_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="16sp"
            android:textColor="@color/mainTextColor"
            android:layout_margin="5dp"/>



        <TextView
            android:id="@+id/state_item_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/state_item_title"
            app:layout_constraintStart_toStartOf="@id/state_item_title"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>




    </androidx.constraintlayout.widget.ConstraintLayout>















  </androidx.cardview.widget.CardView>



